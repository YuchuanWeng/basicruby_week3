
<%if @show_play_again_button %>
   <!--It won't modify anything, so it could be link-->
  <p> Play again?
    <a href="/game" class="btn btn-primary">Yes</a>
    <a href="/game_over" class="btn">No</a>
  </p>
<% end %>

<br/>
<h1>Blackjack 21!</h1>
<p>Welcome <%= session[:player_name] %>.</p>

<div class="well" style="background-color:#00A600;">
 <h4>Dealer's cards</h4>
  <% session[:dealer_cards].each_with_index do |card, i| %>
  <% if session[:turn] != "dealer" && i == 0 %>
    <img src="/images/cards/cover.jpg">
  <% else %>
    <%= card_image(card) %>
  <% end %>
  <% end %>
</div>
<div>
  <%if @dealer_hit_button %>
    <h5>Dealer has <%= calculate_total(session[:dealer_cards]) %></h5>
    Please hit to see dealer's next card:
    <form id="hit_form" action="/game/dealer/hit" method="post">
      <input type="submit" class="btn btn-success" value="Hit"/>
    </form>
  <% end %>
</div>
<br/>
<div class="well" style="background-color:#FFA500;">
 <h4>Player's cards</h4>
  <% session[:player_cards].each do |card| %>
    <%= card_image(card) %>
  <% end %>
</div>
<br/>
        <!--Submit of the information==>http POST-->
        <!--To submit the request, we need a form-->
<br/>
<div class="well">
  <div><%= session[:player_name] %> has <%= calculate_total(session[:player_cards]) %>
  </div>

      <%if @show_hit_or_stay_button %>
        <p>
           What would you like to do?
        </p>
        <form id="hit_form" action="/game/player/hit" method="post">
         <input type="submit" class="btn btn-success" value="Hit"/>
        </form>
        <form id="stay_form" action="/game/player/stay" method="post">
          <input type="submit" class="btn btn-warning" value="Stay"/>
        </form>
      <% end %>
      <div class="alert alert-info">
        You now has certain points.
        You bet certain $$$$ at this round.
      </div>
    </div>


